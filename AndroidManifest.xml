<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marakana.android.yamba"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <permission
        android:name="com.marakana.yamba.content.PERM_READ"
        android:protectionLevel="normal" />
    <permission
        android:name="com.marakana.yamba.content.PERM_WRITE"
        android:protectionLevel="dangerous" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".YambaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_yamba"
        android:label="@string/yamba"
        android:theme="@style/AppTheme" >

        <!-- android:uiOptions="splitActionBarWhenNarrow" -->

        <activity
            android:name=".TimelineActivity"
            android:label="@string/yamba" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StatusActivity"
            android:label="@string/status_title" />
        <activity
            android:name=".TimelineDetailActivity"
            android:label="@string/timeline_detail_title" />
        <activity android:name=".PrefsActivity" />

        <provider
            android:name=".data.YambaProvider"
            android:authorities="com.marakana.yamba"
            android:readPermission="com.marakana.yamba.content.PERM_READ"
            android:writePermission="com.marakana.yamba.content.PERM_WRITE" />

        <service android:name=".svc.YambaService" />
    </application>

</manifest>